{
    "extends": "standard",

    "env": {
      "es6": false,
      "node": false
    },

    "globals": {
      "document": false,
      "window": false,
      "console": false,
      "State": false,
      "App": false,
      "Intro": false,
      "Game": false,
      "Player": false,
      "Credits": false
    },

    "rules": {
      "no-unused-vars": [0],
      "no-console": [0],
      "semi": ["error", "always"]
    }
}
